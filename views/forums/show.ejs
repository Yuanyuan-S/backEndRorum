<h1 class="center">Forum Data for
  <%= forum.title %>
</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <td>
      <%= forum.title %>
    </td>
  </tr>
  <tr>
    <th>Content</th>
    <td>
      <%= forum.content%>
    </td>
  </tr>
  
</table>


<div>
  <a class="button" href="<%=`/forums/${forum._id}/edit`%>">
    Edit Forum Details
  </a>
</div>
<div>
  <a class="button" href="<%= `/forums/${forum._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
</div>
<div>
  <a class="button" href="/forums">View all forums</a>
</div>
